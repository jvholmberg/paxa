{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@core/*": [ "src/app/core/*" ],
      "@shared/*": [ "src/app/shared/*" ],
      "@environments/*": [ "src/environments/*" ],
      "@utils/*": [ "src/utils/*" ],
      "@layout/*": [ "src/app/layout/*" ],

      "@booking/*": [ "src/app/booking/*" ],
      "@organization/*": [ "src/app/organization/*" ],
      "@person/*": [ "src/app/person/*" ],
      "@resource/*": [ "src/app/resource/*" ],
      "@user/*": [ "src/app/user/*" ],
      "@schema/*": [ "src/app/schema/*" ],
      "@timeslot/*": [ "src/app/timeslot/*" ]
    }
  }
}
